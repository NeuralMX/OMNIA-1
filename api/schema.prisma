generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Node {
  id          String    @id @default(uuid())
  name        String
  ipAddress   String
  description String?
  tasks       Task[]
}

model Task {
  id          String    @id @default(uuid())
  description String
  status      TaskStatus
  node        Node   @relation(fields: [nodeId], references: [id])
  nodeId      String
}

enum TaskStatus {
  pending
  in_progress
  completed
}

model Token {
  id        String    @id @default(uuid())
  hash String @unique
  email String @unique
  role TokenRole
  createdAt DateTime @default(now())
}

enum TokenRole {
  admin
  user
}

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Node {
  id             String  @id @default(uuid())
  name           String
  ipAddress      String
  description    String?
  tasks          Task[]
  gpuModel       String?
  gpuMemory      Int?
  gpuTemperature Float?
  cpuModel       String?
  cpuCores       Int?
  cpuSpeed       Float?
  ram            Float?
  storage        Float?
  os             String?
}

model Task {
  id          String     @id @default(uuid())
  description String
  status      TaskStatus
  node        Node       @relation(fields: [nodeId], references: [id])
  nodeId      String
  type        TaskType   @relation(fields: [typeId], references: [id])
  typeId      String
  code        String?
  payload     String?
}

enum TaskStatus {
  pending
  in_progress
  completed
}

model TaskType {
  id          String  @id @default(uuid())
  name        String
  description String
  reward      Int
  tasks       Task[]
  code        String?
  payload     String?
}

model Token {
  id        String    @id @default(uuid())
  hash      String    @unique
  email     String    @unique
  role      TokenRole
  createdAt DateTime  @default(now())
}

enum TokenRole {
  admin
  user
}

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Node {
  id            String     @id @default(uuid())
  name          String
  ipAddress     String
  description   String?
  tasks         Task[]
  gpuModel      String?
  gpuMemory     Int?
  gpuTemperature Float?
  cpuModel      String?
  cpuCores      Int?
  cpuSpeed      Float?
  ram           Float?
  storage       Float?
  os            String?
}

model Task {
  id          String    @id @default(uuid())
  description String
  status      TaskStatus
  node        Node   @relation(fields: [nodeId], references: [id])
  nodeId      String
  type        TaskType  @default(inference)
  code        String?
  payload     String?
}

enum TaskStatus {
  pending
  in_progress
  completed
}

enum TaskType {
  inference
  training
  fine_tuning
  execute_code
}

model Token {
  id        String    @id @default(uuid())
  hash String @unique
  email String @unique
  role TokenRole
  createdAt DateTime @default(now())
}

enum TokenRole {
  admin
  user
}
